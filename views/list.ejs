<%- include("header") -%>

  <div class="box heading" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">

    <%newListItems.forEach(function(item) {%>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
        <p><%= item.name %></p>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %>">
    </form>
    <%})%>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off" autofocus>
        <button type="submit" name="list" value="<%=listTitle%>">+</button>
      </form>
  </div>

  <div class="view-lists-link">
    <a class="view-lists-link" href="/view-lists"><p>View All Lists</p></a>
<!--      <button>View All Lists</button>-->
  </div>

<%- include("footer") -%>
